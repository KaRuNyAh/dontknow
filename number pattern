#include<stdio.h>
//1
//1 2 1
//1 2 3 2 1
int main(){
    int k=0;
    for(int i=1;i<=4;i++)
    {
    for(int j=1;j<=2*i-1;j++)//so to get 3 using 1 we give 2*i-1
    {
        if(j<=i)//till mid value
           printf("%d ",j);
           else
            {
                printf("%d ",i-k);//i is stable dont take j
                k++;
            }
    }
    printf("\n");
    k=1;
    }
}
